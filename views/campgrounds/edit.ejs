<% layout('layouts/boilerplate') %>
  <div class="row mt-3">
    <div class="col-6 offset-3">
      <h1 class="text-center">Edit campground</h1>
      <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" novalidate class="validated-form"
        enctype="multipart/form-data">
        <div>
          <div class="mb-3">
            <label for="title" class="form-label">Enter a title</label>
            <input type="text" class="form-control" name="campground[title]" id="title" required
              value="<%= camp.title %>">
            <div class="valid-feedback">
              OK
            </div>
          </div>
          <div class="mb-3">
            <label for="location" class="form-label">Enter location</label>
            <input type="text" class="form-control" name="campground[location]" id="location" required
              value="<%= camp.location %>">
            <div class="valid-feedback">
              OK
            </div>
          </div>


          <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Upload images</label>
            <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
          </div>


          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <div class="input-group mb-3">
              <span class="input-group-text">$</span>
              <input type="number" step="0.01" class="form-control" required aria-label="Amount (to the nearest dollar)"
                name="campground[price]" id="price" placeholder="0.00" value="<%= camp.price %>">
              <div class="valid-feedback">
                OK
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" class="form-control" name="campground[description]" id="description"
              required><%= camp.description %> </textarea>
            <div class="valid-feedback">
              OK
            </div>
          </div>
          <h6>Delete Images: </h6>
          <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
            <% camp.images.forEach((image, i)=> { %>
              <div class="col">
                <div class="card">
                  <label for="image-<%= i %>"><img class="card-img" src="<%= image.thumbnail %>" alt="">
                    <div class="card-img-overlay text-end pt-1 pe-2">
                      <input class="form-check-input" type="checkbox" name="deleteImages[]"
                        value="<%= image.filename %>" id="image-<%= i %>">
                    </div>
                  </label>
                </div>
              </div>
              <% }) %>
          </div>
          <div class="mb-3">
            <button class="btn btn-primary">Edit camp</button>
          </div>
        </div>
      </form>
      <div><a href="/campgrounds/<%= camp._id %>">Back to campground</a></div>
      <div><a href="/campgrounds/">All campgrounds</a></div>
    </div>
  </div>