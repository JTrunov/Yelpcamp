<% layout('layouts/boilerplate') %>
  <main class="mt-3">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h1 class="text-center">New campground</h1>
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
          <div>
            <div class="mb-3">
              <label for="title" class="form-label">Enter a title</label>
              <input type="text" class="form-control" name="campground[title]" id="title" required>
              <div class="valid-feedback">
                OK
              </div>
            </div>
            <div class="mb-3">
              <label for="location" class="form-label">Enter location</label>
              <input type="text" class="form-control" name="campground[location]" id="location" required>
              <div class="valid-feedback">
                OK
              </div>
            </div>
            <div class="mb-3">
              <label for="formFileMultiple" class="form-label">Upload images</label>
              <input class="form-control" type="file" name="image" id="formFileMultiple" multiple>
            </div>

            <!-- <div class="mb-3">
              <label for="image" class="form-label">Image URL</label>
              <input type="text" class="form-control" name="campground[image]" id="image" required>
              <div class="valid-feedback">
                OK
              </div>
            </div> -->
            <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input type="number" step="0.01" class="form-control" aria-label="Amount (to the nearest dollar)"
                  name="campground[price]" id="price" placeholder="0.00" required>
                <div class="valid-feedback">
                  OK
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea type="text" class="form-control" name="campground[description]" id="description"
                required></textarea>
              <div class="valid-feedback">
                OK
              </div>
            </div>
            <div class="mb-3">
              <button class="btn btn-primary">Add campground</button>
            </div>
          </div>
        </form>
        <a href="/campgrounds">All campgrounds</a>
      </div>
    </div>
  </main>